<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <thead>
      <th></th>
      <th>title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
      </tr>
      <% end %>
    </tbody>
  <% else %>
    <thead>
      <th></th>
      <th>title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
        <td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  <% end %>
</table>